<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EndCourseActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:background="@color/purple">

        <ImageView
            android:id="@+id/iv_tutor"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/tutor_male"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_ec1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_tutor"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="SELESAI"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ec2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="With "
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginLeft="130dp"
            android:layout_below="@+id/tv_ec1"
            android:layout_marginTop="-8sp"/>

        <TextView
            android:id="@+id/tv_ec2b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_ec2"
            android:layout_below="@+id/tv_ec1"
            android:text="Nama Tutor"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-8sp" />

        <TextView
            android:id="@+id/tv_ec3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ec2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-5sp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Politeknik Negeri Jember"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/tv4_mp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Beri penilaian"
            android:fontFamily="@font/poppinsmedium"
            android:textStyle="bold"
            android:textSize="18sp"/>

<!--        <ImageView-->
<!--            android:id="@+id/iv2_mp"-->
<!--            android:layout_width="180dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:src="@drawable/rate4"-->
<!--            android:layout_below="@+id/tv4_mp"/>-->

        <TextView
            android:id="@+id/tv5_mp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Komentar kamu juga sangat penting"
            android:fontFamily="@font/poppinsmedium"/>

        <TextView
            android:id="@+id/tv6_mp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv5_mp"
            android:text="untuk kinerja kami"
            android:fontFamily="@font/poppinsmedium"/>

        <EditText
            android:id="@+id/et1_mp"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_below="@+id/tv6_mp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_payment"
            android:paddingLeft="20dp"
            android:paddingBottom="120dp"
            android:text="Kirim dan saran kamu hari ini..."
            android:textColor="@color/grey"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et1_mp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_add"
            android:fontFamily="@font/poppinsbold"
            android:text="Add"
            android:textSize="13dp"
            android:textColor="@color/white" />


<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Kirim"-->
<!--            android:textColor="@color/white"-->
<!--            android:layout_marginLeft="315dp"-->
<!--            android:layout_marginTop="19dp"-->
<!--            android:background="@color/purple"-->
<!--            android:fontFamily="@font/poppinsmedium"-->
<!--            android:layout_below="@id/et1_mp"/>-->
    </RelativeLayout>

</LinearLayout>