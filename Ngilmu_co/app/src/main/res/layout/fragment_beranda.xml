<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.BerandaFragment">

    <!-- TODO: Update blank fragment layout -->
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="7dp"
                    android:fontFamily="@font/poppinsmedium"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:text="Hi, Veda Nadira!"/>

                <TextView
                    android:id="@+id/tvBelajar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:drawablePadding="7dp"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:text="Belajar apa saja hari ini?"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp">

                <ImageView
                    android:id="@+id/ivProfil"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/tutor_male3"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>


         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="552dp"
             android:layout_marginTop="80dp"
             android:background="@color/white"
             android:paddingLeft="20dp"
             android:paddingTop="25dp"
             android:paddingRight="20dp"
             android:paddingBottom="30dp">


             <LinearLayout
                 android:id="@+id/header"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginHorizontal="5dp"
                 android:layout_marginTop="5dp"
                 android:orientation="horizontal">

                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:fontFamily="@font/poppinsmedium"
                     android:text="Riwayat bimbingan"
                     android:textColor="@color/black"
                     android:textSize="18sp" />

                 <TextView
                     android:id="@+id/tvLihatSemua"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:fontFamily="@font/poppinsmedium"
                     android:gravity="right"
                     android:text="Lihat semua"
                     android:textSize="16sp" />
             </LinearLayout>

             <LinearLayout
                 android:id="@+id/list_riwayat"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_below="@+id/header"
                 android:layout_marginTop="30dp"
                 android:background="@color/softpurple"
                 android:padding="20dp">

                 <androidx.cardview.widget.CardView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     app:cardCornerRadius="30dp">

                     <ImageView
                         android:id="@+id/ivGambar"
                         android:layout_width="60dp"
                         android:layout_height="60dp"
                         android:background="@drawable/tutor_male" />
                 </androidx.cardview.widget.CardView>

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="10dp"
                     android:orientation="vertical">

                     <TextView
                         android:id="@+id/tvNamaTuTor"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:fontFamily="@font/poppinsbold"
                         android:text="Jamaludin Mahmud"
                         android:textAppearance="@style/TextAppearance.AppCompat.Title"
                         android:textSize="14sp" />

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal">

                         <TextView
                             android:id="@+id/tvMapel"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:fontFamily="sans-serif"
                             android:text="Sejarah"
                             android:textSize="12sp" />

                         <TextView
                             android:id="@+id/tvTanggal"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="5dp"
                             android:fontFamily="sans-serif"
                             android:text="11/01/2022"
                             android:textSize="12sp" />

                         <TextView
                             android:id="@+id/tvStatus"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="5dp"
                             android:fontFamily="sans-serif"
                             android:text="Berlangsung"
                             android:textSize="12sp" />

                         <TextView
                             android:id="@+id/tvIdPemesanan"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:visibility="invisible" />
                     </LinearLayout>
                 </LinearLayout>

             </LinearLayout>
              <LinearLayout
                 android:id="@+id/list_riwayat2"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="30dp"
                 android:background="@color/softpurple"
                 android:padding="20dp"
                 android:layout_below="@+id/list_riwayat"
                 >
                  <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/ivGambar2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/tutor_female"/>
                </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNamaTuTor2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsbold"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="Lilisani Tiasa"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvMapel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:text="Matematika"/>
            <TextView
                android:id="@+id/tvTanggal2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:text="08/01/2022"/>
            <TextView
                android:id="@+id/tvStatus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/teal_700"
                android:text="Selesai"/>
            <TextView
                android:id="@+id/tvIdPemesanan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>

             </LinearLayout>
              <LinearLayout
                 android:id="@+id/list_riwayat3"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="30dp"
                 android:background="@color/softpurple"
                 android:padding="20dp"
                 android:layout_below="@+id/list_riwayat2"
                 >
                  <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/ivGambar3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/tutor_male2"/>
                </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNamaTuTor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsbold"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:text="Royan Firdaus"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvMapel3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:text="Sosiologi"/>
            <TextView
                android:id="@+id/tvTanggal3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:text="30/12/2021"/>
            <TextView
                android:id="@+id/tvStatus3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:textColor="@color/red"
                android:text="Cancel"/>
            <TextView
                android:id="@+id/tvIdPemesanan3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>

             </LinearLayout>

             <!--            <androidx.recyclerview.widget.RecyclerView-->
             <!--                android:id="@+id/rvListRiwayat"-->
             <!--                android:layout_width="match_parent"-->
             <!--                android:layout_height="wrap_content"-->
             <!--                android:layout_marginTop="50dp"-->
             <!--                tools:listitem="@layout/list_riwayat" />-->
         </RelativeLayout>
    </LinearLayout>
</ScrollView>